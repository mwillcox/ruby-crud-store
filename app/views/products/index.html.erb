<h1>
    <% if current_user %>
     Hi, <%= current_user.name %>! Here's your available products
    <% else %>
      Available Products
    <% end %>
</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <a href="/products/<%= product.id %>">
        <div class="img-wrapper">
          <img class="img-responsive" src="<%= product.image %>">
        </div>
		<div class="info-background">
			<p><%= product.title %> - <%= number_to_currency(product.price) %></p>
		</div>
      </a>
    </div>
  <% end %>
</div>
